<script>
    // Function to submit user thoughts (simulated)
    function submitThought() {
        const thought = document.getElementById('thought-input').value;
        if (thought.trim()) {
            alert("Thank you for sharing your thought!");
            document.getElementById('thought-input').value = ""; // clear the input
        } else {
            alert("Please enter a thought before submitting.");
        }
    }

    // Function to display the admin-only section (for demo purposes)
    function showAdminSection() {
        document.getElementById('admin-blog').style.display = 'block';
    }

    // Update Daily Prompt (example)
    const prompts = [
        "What’s the strangest thought you've had recently?",
        "If you could share one secret anonymously, what would it be?",
        "What's something you've always wanted to say, but never did?",
        "What’s an embarrassing memory that still haunts you?",
        "What’s a thought that you think only you have?"
    ];

    function updatePrompt() {
        const randomPrompt = prompts[Math.floor(Math.random() * prompts.length)];
        document.getElementById('daily-prompt').innerText = "Today's Prompt: " + randomPrompt;
    }

    // Update the prompt daily
    updatePrompt();

    // Logo Upload Integration (simulated)
    const logoInput = document.createElement('input');
    logoInput.type = 'file';
    logoInput.accept = 'image/*';
    logoInput.onchange = function(event) {
        const file = event.target.files[0];
        if (file) {
            const reader = new FileReader();
            reader.onload = function(e) {
                document.getElementById('logo').src = e.target.result;
            };
            reader.readAsDataURL(file);
        }
    };

    // Function to prompt for logo upload
    function uploadLogo() {
        logoInput.click();
    }

    // Allow clicking on the logo to upload
    document.getElementById('logo').addEventListener('click', uploadLogo);

</script>
